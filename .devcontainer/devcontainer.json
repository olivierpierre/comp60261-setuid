{
  "image": "olivierpierre/comp60261-setuid",

  "workspaceFolder": "/home/user",

  "mounts": [
    "source=${localWorkspaceFolder},target=/home/user,type=bind"
  ],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
